<div class="l-home-directory">
  <div class="l-constrained">
    <%= heading_tag(level: heading_level ||= 2, class: 'l-home-directory__title') do %>
      <%= t('.directory_heading') %>
    <% end %>

    <div class="l-promo-corporate">
      <% @categories.each do |category| %>
        <div class="l-promo-corporate__item">
          <%= heading_tag(level: heading_level ||= 3, class: 'promo__heading') do %>
            <%= link_to category.title, category.path, class: 'promo__link' %>
          <% end %>
          <p class="promo__content"><%= category.description %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
